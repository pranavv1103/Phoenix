# Copy this file to .env and fill in your actual values.
# .env is gitignored and will NEVER be committed.

# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/phoenix
DB_USERNAME=
DB_PASSWORD=

# Frontend URL (for CORS + password reset emails)
FRONTEND_URL=http://localhost:5173

# JWT Secret (generate a random 64-char hex string)
JWT_SECRET=your_jwt_secret_here

# Gmail credentials (use an App Password from myaccount.google.com/apppasswords)
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password

# Razorpay API keys (from Razorpay Dashboard → Settings → API Keys)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
